<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BgImageView">
        <item name ="android:src">@drawable/bg_login</item>
        <item name ="android:scaleType">center</item>
        <item name ="android:layout_width">match_parent</item>
        <item name ="android:layout_height">match_parent</item>
    </style>

    <style name="CustomSubmitButton" parent="android:Widget.Button">
        <item name ="android:background">@drawable/button_custom_border</item>
    </style>

    <style name="CustomEditText" parent="android:Widget.EditText">
        <item name ="android:background">@drawable/edit_text_custom_border</item>
    </style>

    <style name="DefaultTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderTextLogin" parent="HeaderText">
    </style>

    <style name="BodyText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BodyTextLogin" parent="BodyText">
        <item name="android:textStyle">normal</item>
    </style>
</resources>
